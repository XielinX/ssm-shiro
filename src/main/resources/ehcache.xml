<?xml version="1.0" encoding="UTF-8" ?>
<ehcache name="">
    <diskStore path="D://shiroCache"/>

    <!--默认缓存-->
    <defaultCache name="default"
                  maxEntriesLocalHeap="1000"
                  eternal="false"
                  timeToIdleSeconds="3600"
                  timeToLiveSeconds="0"
                  overflowToDisk="false"
                  statistics="true">
    </defaultCache>

    <!-- 登录记录缓存 锁定10分钟 -->
    <cache name="passwordRetryCache"
           maxEntriesLocalHeap="1000"
           eternal="false"
           timeToIdleSeconds="3600"
           timeToLiveSeconds="0"
           overflowToDisk="false"
           statistics="true">
    </cache>
</ehcache>